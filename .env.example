# Environment for configuration (production or debug)
APP_ENV=production

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8081

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Search Database Configuration (for search-service)
SEARCH_DB_HOST=search-database
SEARCH_DB_PORT=5432
SEARCH_DB_USER=postgres
SEARCH_DB_PASSWORD=postgres123
SEARCH_DB_NAME=postgres
SEARCH_DB_SSL_MODE=disable

# Resource Database Configuration (for resource-service)
RESOURCE_DB_HOST=resource-database
RESOURCE_DB_PORT=5432
RESOURCE_DB_USER=postgres
RESOURCE_DB_PASSWORD=postgres123
RESOURCE_DB_NAME=postgres

# Auth Database Configuration (for Keycloak)
AUTH_DB_HOST=auth-database
AUTH_DB_PORT=5432
AUTH_DB_USER=postgres
AUTH_DB_PASSWORD=postgres123
AUTH_DB_NAME=keycloak
AUTH_DB_URL=jdbc:postgresql://auth-database:5432/keycloak

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
AUTH_HOST=auth
AUTH_PORT=8080
AUTH_REALM=deltanotes
AUTH_SEARCH_SERVICE_CLIENT_ID=search-service
AUTH_SEARCH_SERVICE_CLIENT_SECRET=search-service-secret
AUTH_ADMIN_LOGIN=admin
AUTH_ADMIN_PASSWORD=admin123

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================
KAFKA_BROKERS=kafka:29092
KAFKA_SEARCH_SERVICE_CONSUMER_GROUP_ID=search-service-consumer
KAFKA_TOPIC_RESOURCE=resource

# =============================================================================
# LOGGING CONFIGURATION  
# =============================================================================
LOG_LEVEL=info